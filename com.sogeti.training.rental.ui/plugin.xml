<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.sogeti.training.rental.ui.category1"
            name="Rental">
      </category>
      <view
            category="com.sogeti.training.rental.ui.category1"
            class="com.sogeti.training.rental.ui.views.RentalPropertyView"
            id="com.sogeti.training.rental.ui.rentalproperty"
            name="Rental Properties"
            restorable="true">
      </view>
      <view
            category="com.sogeti.training.rental.ui.category1"
            class="com.sogeti.training.rental.ui.views.AngenceDetailsView"
            id="com.sogeti.training.rental.ui.angencedetails"
            name="Angence Details"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.sogeti.training.rental.ui.PerspectiveFactory1"
            icon="icons/sample.png"
            id="com.sogeti.training.rental.ui.perspective1"
            name="Rental">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.sogeti.training.rental.ui.RentalPrefColor"
            id="com.sogeti.training.rental.ui.page1"
            name="Colors">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.sogeti.training.rental.ui.RentalPrefInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.sogeti.training.rental.ui.category1"
            id="com.sogeti.training.rental.ui.helloworld"
            name="Hello Wold">
      </command>
      <category
            id="com.sogeti.training.rental.ui.category1"
            name="hello">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.sogeti.training.rental.ui.HelloWorldHandler"
            commandId="com.sogeti.training.rental.ui.helloworld">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Training">
            <command
                  commandId="com.sogeti.training.rental.ui.helloworld"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.sogeti.training.rental.ui.toolbar1">
            <command
                  commandId="com.sogeti.training.rental.ui.helloworld"
                  icon="icons/chromium_16.png"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="Hey">
            <command
                  commandId="com.sogeti.training.rental.ui.helloworld"
                  icon="icons/chromium_16.png"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
